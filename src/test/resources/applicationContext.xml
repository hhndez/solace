<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-4.1.xsd">

    <context:component-scan base-package="com.bursatec" />

    <bean name="developer" class="com.bursatec.massive.common.support.notify.logger.DevelopmentNotifier" />
    <bean name="application" class="com.bursatec.massive.common.support.notify.logger.ApplicationNotifier" />

    <bean id="developerNotifierExporter" class="com.bursatec.massive.common.support.notify.logger.LoggerNotifierExporter">
        <constructor-arg ref="developer" />
    </bean>

    <bean id="applicationNotifierExporter" class="com.bursatec.massive.common.support.notify.logger.LoggerNotifierExporter">
        <constructor-arg ref="application" />
    </bean>

    <bean id="rootLoggerNotifierExporter" class="com.bursatec.massive.common.support.notify.logger.RootLoggerNotifyExporter">
    </bean>
</beans>